#!/usr/bin/env python
from jonathans_scanner import jonathans_scanner
import sys
import os
import subprocess

def main():

	name = 'nikto'
	platform = 'drupal'

	scanner = jonathans_scanner(name, platform)

	for url in scanner.urls:
		print url
		scanner.set_misc_paths(url)
		
		cmd = ['/usr/bin/nikto', '-Format', 'txt', '-output', scanner.logfile, '-Plugins', '""', '-useproxy', 'http://127.0.0.1:8080/', '-Tuning', '9', '-host' , '"'+scanner.base_url+'"']
		cmd = ' '.join(cmd)

		test = scanner.begin(cmd)

if __name__ == '__main__':
	main()
