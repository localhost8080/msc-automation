#!/usr/bin/env python
from jonathans_scanner import jonathans_scanner

def main():

	name = 'arachni'

	scanner = jonathans_scanner(name)

	for url in scanner.dvwa_urls:
		print url
		scanner.setUrls(url)

		cmd = ['/usr/bin/arachni', '--checks', 'sql_injection*', '--http-proxy', 'http://127.0.0.1:8080', '--output-only-positives', '--report-save-path', scanner.reports, '--http-cookie-jar', scanner.dvwa_cookiefile, '--scope-page-limit','1', url]
		cmd = ' '.join(cmd)

		test = scanner.begin(cmd)

	for url in scanner.wp15_urls:
		print url
		scanner.setUrls(url)

		cmd = ['/usr/bin/arachni', '--checks', 'sql_injection*', '--http-proxy', 'http://127.0.0.1:8080', '--output-only-positives', '--report-save-path', scanner.reports, '--http-cookie-jar', scanner.wp15_cookiefile, '--scope-page-limit','1', url]
		cmd = ' '.join(cmd)

		test = scanner.begin(cmd)

if __name__ == '__main__':
	main()
